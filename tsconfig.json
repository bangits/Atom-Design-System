{
  "compilerOptions": {
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "esModuleInterop": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [],
    "paths": {
      // This paths synchronized with webpack shared config
      "@/*": ["*"]
    }
  },
  "files": ["./src/*/**"],
  "exclude": ["./node_modules"]
}
