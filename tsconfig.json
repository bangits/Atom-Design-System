{
  "compilerOptions": {
    "isolatedModules": true,
    "moduleResolution": "Node",
    "declaration": false,
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "esModuleInterop": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node"],
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["./node_modules", "**/*.stories.tsx"]
}
